<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Opintojakson luonti tai poistaminen</title>
    <link href= "/public/stylesheets/opintojakso/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">
     <style>
         th { 
           color: #FE0000;
           font-family: "Fantasy", Papyrus;
           font-weight: 900;
           font-size: 25px;
         }
        td {
           color: #03B48C;
           font-family: "Ink Free";
           font-weight: 900;
           font-size: 20px;
        }
       a {
          text-color: red;
          font-family: Segoe Print;
          font-weight: bold;
      }
     </style>
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Opintojakson luonti tai poistaminen</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/Opintojakso/add">Lisää Opintojakso</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Koodi</th>
                    <th scope="col">Laajuus</th>
	    <th scope="col">Nimi</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].Koodi%></td>
                    <td><%= data[i].Laajuus%></td>
	    <td><%= data[i].Nimi%></td>
                    <td>
                        <a class="btn btn-success edit" href="../opintojakso/edit/<%=data[i].idOpintojakso%>">Edit</a>                       
                        <a class="btn btn-danger delete" onclick="return alert('Oletko varma, että haluat poistaa opintojakson?')" href="../opintojakso/delete/<%=data[i].idOpintojakso%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">Opintojaksoa ei löytynyt!</p>
        <% } %>

        </div>
    </div>

</body>
</html>